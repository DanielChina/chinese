<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/func_margin">
    <ImageView
        android:layout_marginTop="@dimen/func_margin"
        android:layout_marginLeft="@dimen/func_margin"
        android:layout_marginRight="@dimen/func_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_icon"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/sub_function_name"/>
</LinearLayout>
